{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": [
    "json",
    "lcov",
    "html",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "testMatch": [
    "<rootDir>/**/*.test.js"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ]
}